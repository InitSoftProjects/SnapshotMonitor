<mvc:View controllerName="com.arumatech.SnapshotMonitor.controller.CreateSnapshot"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page showNavButton="false" title="Create Snapshot">
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm id="SimpleFormChange354"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4"
                    emptySpanL="4"
                    emptySpanM="4"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="2"
                    columnsM="2"
                    singleContainerFullSize="false" >
                    <f:content>
                        <Label text="Snapshot ID" />
                        <Input id="SnapshotID" value="" />

                        <Label text="Snapshot Type" />
                        <Input id="SnapshotType" value="" />

                        <Label text="Snapshot Date" />
                        <DatePicker id="snDate" value="" />
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button type="Accept" text="Create Snapshot" press="onCreateSnapshot"/>
                <Button type="Reject" text="Reset"></Button>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>